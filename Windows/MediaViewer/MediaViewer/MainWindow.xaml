<Window x:Class="MediaViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaViewer"
        mc:Ignorable="d"
        Title="Media Viewer" Height="475" Width="700"
        MinHeight="475" MinWidth="475">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="85"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Name="leftButton" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2" Height="60" Width="60">
                <TextBlock Text="L"/>
            </Button>
            <Button Name="rightButton" Grid.Column="6" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2" Height="60" Width="60">
                <TextBlock Text="R"/>
            </Button>
            <Button Name="fullscreenButton" Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2" Height="60" Width="60">
                <TextBlock Text="FS"/>
            </Button>
            <Button Name="browseButton" Grid.Column="2" Grid.Row="0" Height="30" Width="30">
                <TextBlock Text="b"/>
            </Button>

            <Button Name="zoomInButton" Grid.Column="5" Grid.Row="0" Height="30" Width="30">
                <TextBlock Text="+"/>
            </Button>
            <Button Name="zoomOutButton" Grid.Column="5" Grid.Row="1" Height="30" Width="30">
                <TextBlock Text="-"/>
            </Button>
        </Grid>
    </Grid>
</Window>
